		}

		&.is-dark {
			@apply bg-surface-700;

			&.is-active {
				@apply bg-surface-600;
			}

			&.is-disabled {
				@apply opacity-70;
			}
		}
		// #endif
	}

	&__cursor {
		@apply absolute bg-primary-500;
