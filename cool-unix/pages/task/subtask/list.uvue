<template>
	<view class="flex flex-col h-screen bg-[#f5f7fa]">
		<!-- 顶部导航 -->
		<cl-topbar title="可接子任务" :show-back="true" background-color="#ffffff" color="#1f2329" safe-area-top></cl-topbar>

		<!-- 筛选栏 -->
		<view class="bg-white px-[32rpx] py-[24rpx] mb-[16rpx]">
			<view class="flex items-center justify-between">
				<text class="text-[32rpx] text-[#1f2329]">共 {{ totalCount }} 个可接任务</text>
				<view @click="showFilterDialog = true" class="flex items-center">
					<text class="text-[28rpx] text-[#0052d9]">筛选</text>
					<uni-icons type="settings" size="16" color="#0052d9" class="ml-[8rpx]"></uni-icons>
				</view>
			</view>
		</view>

		<!-- 子任务列表 -->
		<scroll-view class="flex-1 h-0" scroll-y @scrolltolower="loadMore">
			<view class="p-[32rpx] flex flex-col gap-[24rpx]">
				<view 
					v-for="(task, index) in subtaskList" 
					:key="index"
					@click="goToDetail(task.id)"
					class="bg-white rounded-[24rpx] p-[32rpx]"
				>
					<!-- 任务头部 -->
					<view class="flex items-center justify-between mb-[24rpx]">
						<view class="flex items-center gap-[16rpx]">
							<view class="bg-[#f0f9ff] px-[16rpx] py-[8rpx] rounded-[8rpx]">
								<text class="text-[22rpx] text-[#0052d9]">{{ task.category }}</text>
							</view>
							<view class="bg-[#fff9e6] px-[16rpx] py-[8rpx] rounded-[8rpx]">
								<text class="text-[22rpx] text-[#ed6a0c]">{{ task.platform }}</text>
							</view>
						</view>
						<text class="text-[24rpx] text-[#999999]">{{ task.createTime }}</text>
					</view>

					<!-- 任务信息 -->
					<view class="mb-[24rpx]">
						<text class="text-[36rpx] font-bold text-[#1f2329] mb-[16rpx] block">{{ task.title }}</text>
						<text class="text-[28rpx] text-[#646a73] leading-relaxed block">{{ task.description }}</text>
					</view>

					<!-- 任务要求 -->
					<view class="flex flex-row flex-wrap gap-[24rpx] mb-[24rpx]">
						<view class="flex items-center gap-[4rpx]">
							<uni-icons type="time" size="14" color="#999999"></uni-icons>
							<text class="text-[24rpx] text-[#999999]">{{ task.timeLimit }}小时</text>
						</view>
						<view class="flex items-center gap-[4rpx]">
							<uni-icons type="camera" size="14" color="#999999"></uni-icons>
							<text class="text-[24rpx] text-[#999999]">{{ task.proofCount }}张凭证</text>
						</view>
					</view>

					<!-- 任务数据 -->
					<view class="flex items-center justify-between border-t-[2rpx] border-[#e5e5e5] pt-[24rpx]">
						<view>
							<text class="text-[24rpx] text-[#999999]">佣金</text>
							<text class="text-[40rpx] font-bold text-[#ff3b30] ml-[8rpx]">¥{{ task.commission }}</text>
						</view>
						<button 
							@click.stop="receiveTask(task.id)"
							class="bg-[#0052d9] text-white rounded-full px-[48rpx] py-[16rpx] h-[72rpx] flex items-center justify-center"
						>
							<text class="text-[28rpx]">立即接单</text>
						</button>
					</view>
				</view>

				<!-- 加载更多 -->
				<view v-if="loading" class="flex justify-center py-[32rpx]">
					<text class="text-[26rpx] text-[#999999]">加载中...</text>
				</view>
				<view v-if="!hasMore && subtaskList.length > 0" class="flex justify-center py-[32rpx]">
					<text class="text-[26rpx] text-[#999999]">没有更多了</text>
				</view>
				<view v-if="subtaskList.length === 0 && !loading" class="flex flex-col items-center justify-center py-[160rpx] gap-[24rpx]">
					<uni-icons type="compose" size="48" color="#dcdfe6"></uni-icons>
					<text class="text-[32rpx] text-[#999999]">暂无可接任务</text>
				</view>
			</view>
		</scroll-view>

		<!-- 筛选对话框 -->
		<view v-if="showFilterDialog" class="fixed inset-0 bg-black/50 flex flex-col justify-end z-[100]" @click="showFilterDialog = false">
			<view class="bg-white rounded-t-[24rpx] p-[32rpx] pb-[calc(32rpx+env(safe-area-inset-bottom))]" @click.stop>
				<text class="text-[32rpx] font-bold text-[#1f2329] mb-[32rpx] block">筛选条件</text>
				
				<view class="mb-[32rpx]">
					<text class="text-[28rpx] text-[#646a73] mb-[16rpx] block">任务类目</text>
					<view class="flex flex-row flex-wrap gap-[16rpx]">
						<view 
							v-for="(item, index) in categories" 
							:key="index"
							@click="filter.category = item"
							class="px-[32rpx] py-[16rpx] rounded-[32rpx] border-[2rpx]"
							:class="filter.category === item ? 'border-[#0052d9] bg-[#f0f9ff]' : 'border-[#e5e5e5] bg-white'"
						>
							<text class="text-[28rpx]" :class="filter.category === item ? 'text-[#0052d9]' : 'text-[#646a73]'">{{ item }}</text>
						</view>
					</view>
				</view>

				<view class="mb-[32rpx]">
					<text class="text-[28rpx] text-[#646a73] mb-[16rpx] block">佣金范围</text>
					<view class="flex flex-row flex-wrap gap-[16rpx]">
						<view 
							v-for="(item, index) in commissionRanges" 
							:key="index"
							@click="filter.commissionRange = item.value"
							class="px-[32rpx] py-[16rpx] rounded-[32rpx] border-[2rpx]"
							:class="filter.commissionRange === item.value ? 'border-[#0052d9] bg-[#f0f9ff]' : 'border-[#e5e5e5] bg-white'"
						>
							<text class="text-[28rpx]" :class="filter.commissionRange === item.value ? 'text-[#0052d9]' : 'text-[#646a73]'">{{ item.label }}</text>
						</view>
					</view>
				</view>

				<view class="flex flex-row gap-[24rpx]">
					<button 
						@click="resetFilter"
						class="flex-1 h-[88rpx] bg-[#f5f5f5] text-[#646a73] rounded-full flex items-center justify-center text-[30rpx]"
					>
						重置
					</button>
					<button 
						@click="applyFilter"
						class="flex-1 h-[88rpx] bg-[#0052d9] text-white rounded-full flex items-center justify-center text-[30rpx]"
					>
						确定
					</button>
				</view>
			</view>
		</view>
	</view>
</template>

<script setup lang="uts">
import { ref, onMounted } from 'vue'
import { getAvailableSubTasks, acceptSubTask } from '@/services/task'

// 任务ID（可选）
const taskId = ref(0)

// 总数量
const totalCount = ref(0)

// 子任务列表
const subtaskList = ref([])

// 加载状态
const loading = ref(false)
const hasMore = ref(true)
const page = ref(1)

// 显示筛选对话框
const showFilterDialog = ref(false)

// 筛选条件
const filter = ref({
	category: '全部',
	commissionRange: 'all'
})

// 分类列表
const categories = ['全部', '电商', '外卖', '出行', '生活', '其他']

// 佣金范围
const commissionRanges = [
	{ label: '全部', value: 'all' },
	{ label: '10元以下', value: '0-10' },
	{ label: '10-20元', value: '10-20' },
	{ label: '20-50元', value: '20-50' },
	{ label: '50元以上', value: '50-' }
]

// 加载子任务列表
const loadSubtaskList = async () => {
	if (loading.value) return
	
	try {
		loading.value = true
		
		const res = await getAvailableSubTasks({
			taskId: taskId.value,
			category: filter.value.category === '全部' ? '' : filter.value.category,
			commissionRange: filter.value.commissionRange,
			page: page.value,
			pageSize: 10
		})
		
		loading.value = false
		
		if (res.code === 0) {
			if (page.value === 1) {
				subtaskList.value = res.data.list
			} else {
				subtaskList.value = subtaskList.value.concat(res.data.list)
			}
			totalCount.value = res.data.total
			hasMore.value = res.data.hasMore
		}
	} catch (error) {
		loading.value = false
		console.log('加载子任务列表失败', error)
	}
}

// 加载更多
const loadMore = () => {
	if (!loading.value && hasMore.value) {
		page.value++
		loadSubtaskList()
	}
}

// 接单
const receiveTask = async (id: number) => {
	try {
		uni.showLoading({ title: '接单中...' })
		
		const res = await acceptSubTask(id)
		
		uni.hideLoading()
		
		if (res.code === 0) {
			uni.showToast({
				title: '接单成功',
				icon: 'success'
			})
			
			// 跳转到子任务详情
			setTimeout(() => {
				uni.navigateTo({
					url: `/pages/task/subtask/detail?id=${id}`
				})
			}, 1500)
		} else {
			uni.showToast({
				title: res.msg || '接单失败',
				icon: 'none'
			})
		}
	} catch (error) {
		uni.hideLoading()
		uni.showToast({
			title: '接单失败',
			icon: 'none'
		})
	}
}

// 重置筛选
const resetFilter = () => {
	filter.value = {
		category: '全部',
		commissionRange: 'all'
	}
}

// 应用筛选
const applyFilter = () => {
	showFilterDialog.value = false
	page.value = 1
	subtaskList.value = []
	loadSubtaskList()
}

// 进入子任务详情
const goToDetail = (id: number) => {
	uni.navigateTo({
		url: `/pages/task/subtask/detail?id=${id}`
	})
}

// 页面加载时获取子任务列表
onMounted(() => {
	// 获取任务ID（可选）
	const pages = getCurrentPages()
	const currentPage = pages[pages.length - 1]
	// @ts-ignore
	taskId.value = parseInt(currentPage.options?.taskId || '0')
	
	loadSubtaskList()
})
</script>

