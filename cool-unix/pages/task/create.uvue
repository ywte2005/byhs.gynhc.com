		<!-- Type Picker Mock (ActionSheet) -->
		<!-- Merchant Picker Mock (ActionSheet) -->
	</view>
</template>

<script setup lang="uts">
import { ref, computed, onMounted } from 'vue'
import { dayUts } from "@/.cool";
import { getTaskTypes, createTask, type TaskType } from '@/services/task'
import { getApplicationList } from '@/services/merchant'

// 今天日期
const today = dayUts().format('YYYY-MM-DD')

// 日期选择器样式配置 - 主题色 #0052d9
const datePickerPt = {
	trigger: {
		className: 'h-[88rpx] min-h-[88rpx] bg-[#f5f7fa] rounded-[16rpx] px-[24rpx] flex flex-row items-center'
	},
	popup: {
		confirmButton: {
			className: 'bg-[#0052d9]'
		}
	}
}

// State
const loading = ref(false)

// 表单数据
const form = ref({
	type: '',
	typeCode: '',
	title: '',
	description: '',
	collectionType: 'merchant' as 'merchant' | 'qrcode',
	merchant: '',
	merchantId: 0,
	qrCode: '',
	totalAmount: '',
	startTime: '',
	endTime: ''
})

// 任务类型列表
const taskTypes = ref<TaskType[]>([])
const taskTypeNames = computed(() => taskTypes.value.map(t => t.name))

// 商户列表
type MerchantItem = { id: number; name: string; applicationNo: string }
const merchants = ref<MerchantItem[]>([])
const merchantNames = computed(() => merchants.value.map(m => m.name))

// 选择类型
const selectType = () => {
	if (taskTypeNames.value.length === 0) {
		uni.showToast({ title: '暂无任务类型', icon: 'none' })
		return
	}
	uni.showActionSheet({
		itemList: taskTypeNames.value,
		success: (res) => {
			const selected = taskTypes.value[res.tapIndex]
			form.value.type = selected.name
			form.value.typeCode = selected.code
		}
	})
}

// 选择商户
const selectMerchant = () => {
	if (merchantNames.value.length === 0) {
		uni.showToast({ title: '暂无可用进件商户', icon: 'none' })
		return
	}
	uni.showActionSheet({
		itemList: merchantNames.value,
		success: (res) => {
			const selected = merchants.value[res.tapIndex]
			form.value.merchant = selected.name
			form.value.merchantId = selected.id
		}
	})
}

// 点击选择类型
const onTypeTap = () => {
	selectType()
}

// 点击选择商户
const onMerchantTap = () => {
	selectMerchant()
}

// 加载任务类型
const loadTaskTypes = async () => {
	try {
		const res = await getTaskTypes()
		taskTypes.value = res.list || []
	} catch (err: any) {
		console.error('加载任务类型失败', err)
	}
}

// 加载商户列表
const loadMerchants = async () => {
	try {
		const res = await getApplicationList('approved')
		merchants.value = (res.list || []).map((item: any) => ({
			id: item.id,
			name: item.name,
			applicationNo: item.application_no
		}))
	} catch (err: any) {
		console.error('加载商户列表失败', err)
	}
}

onMounted(() => {
	loadTaskTypes()
	loadMerchants()
})

// 上传二维码
const uploadQrCode = () => {
	uni.chooseImage({
		count: 1,
		success: (res) => {
			form.value.qrCode = res.tempFilePaths[0]
		}
	})
}

// 校验是否可提交
const canSubmit = computed(() => {
	const basicValid = form.value.type && form.value.title && form.value.description && 
					   form.value.totalAmount && form.value.startTime && form.value.endTime
	
	const collectionValid = form.value.collectionType === 'merchant' 
		? !!form.value.merchant 
		: !!form.value.qrCode

	return basicValid && collectionValid
})

// 提交任务
const submitTask = async () => {
	if (!canSubmit.value) {
		uni.showToast({ title: '请填写完整信息', icon: 'none' })
		return
	}
	
	try {
		uni.showLoading({ title: '提交中...' })
		
		const res = await createTask({
			title: form.value.title,
			type_code: form.value.typeCode,
			total_amount: parseFloat(form.value.totalAmount),
			channel_id: form.value.merchantId,
			collection_type: form.value.collectionType,
			qr_code: form.value.qrCode,
			start_time: form.value.startTime,
			end_time: form.value.endTime,
			remark: form.value.description
		})
		
		uni.hideLoading()
		uni.showToast({
			title: '提交成功，等待审核',
			icon: 'success'
		})
		setTimeout(() => {
			uni.navigateBack()
		}, 1500)

	} catch (error: any) {
		uni.hideLoading()
		uni.showToast({
			title: error.message || '提交失败，请重试',
			icon: 'none'
		})
	}
}
</script>

